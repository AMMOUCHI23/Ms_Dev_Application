{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container  ">
    <h1 class="text-primary mt-4"> Formulaire de contact   </h1>
	<div class="row">
	

		 {{ form_start(form, {'attr' : {'novalidate': 'novalidate'}} ) }}
		<div class="my-custom-class-for-errors text-danger">
			{{ form_errors(form) }}
		</div>
			{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
		
	</div>
	<div class="row">
	
		<div class="col my-2 ">

			{{ form_label(form.nom) }}
			{{ form_widget(form.nom) }}
			{{ form_errors(form.nom) }}
		</div>
        <div class=" col my-2 ">

			{{ form_label(form.prenom) }}
			{{ form_widget(form.prenom) }}
			{{ form_errors(form.prenom) }}
		</div>
	</div>
	<div class="row">
		<div class="col mx-auto my-2">
		    {{ form_label(form.email) }}
			{{ form_widget(form.email) }}
			{{ form_errors(form.email) }}
		</div>
		
		<div class="col mx-auto my-2">
			 {{ form_label(form.telephone) }}
			{{ form_widget(form.telephone) }}
			{{ form_errors(form.telephone) }}
		</div>
	</div>
	<div class="row">
		<div class="col mx-auto my-2">
			 {{ form_label(form.message) }}
			{{ form_widget(form.message) }}
			{{ form_errors(form.message) }}
		</div>

	</div>
	<div class="row">
		<div class="col mt-4 d-flex justify-content">
         <a href="{{path('catalogue')}}"> <button type="button" class="btn border-info ">Revenir en arri√®re</button></a>

		</div>
		<div class="col mt-4 d-flex justify-content-end">
          <button type="submit" class="btn btn-primary ">Envoyer ma demande</button>

		</div>
	</div>
	{{ form_end(form) }}

</div>
{% endblock %}

