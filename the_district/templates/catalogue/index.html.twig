{% extends 'base.html.twig' %}

{% block title %}Catallogue
{% endblock %}

{% block body %}

	<div class="container text-center mt-5">
		<div id="carouselExampleAutoplaying" class="carousel slide col-12 " data-bs-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="{{asset("assets/img/bg.jpg")}}" class="d-block  w-100 rounded-pill" width="300" height="200" alt="...">
				</div>
				<div class="carousel-item">
					<img src=" {{asset("assets/img/fond11.jpg")}}" class="d-block  w-100 rounded-pill" width="300" height="200" alt="...">
				</div>
				<div class="carousel-item">
					<img src="{{asset("assets/img/bg2.jpg")}}" class="d-block  w-100 rounded-pill" width="300" height="200" alt="...">
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
		<h1 class="text-center text-primary mt-3">
			Nos Categories
		</h1>
		<div class="row justify-content-center ">
			{% for categorie in categories %}
				<div class="col-justify-content  col-sm-6 col-md-4 my-4 survol">
					<a href="{{ path('plats_categorie', {id: categorie.id}) }}"><img class="img-thumbnail rounded-circle" src="{{ asset('assets/img/category/' ~ categorie.image) }}" width="400" height="400"></a>
					<h3 class="nomCategorie my-2">
						{{ categorie.libelle }}</h3>

				</div>
			{% endfor %}
		</div>
		<div class="row">
			<div class="description text-black redressed   text-capitalize fst-italic  justify-content-center align-items-center col-12  col-md-5 my-4 py-5">
				<h1 class="fs-2 bg-danger" id="change-position">The District</h1>
				<h3>Au cœur d'Amiens, notre Restaurant Gastronomique propose une cuisine raffinée, élaborée à partir des produits locaux et de saison.
				</h3>

			</div>


			<div id="carouselExampleControlsNoTouching" class="carousel slide col-md-5 my-5 mx-5" data-bs-touch="false">
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img src="{{asset("assets/img/salade_d'hiver.jpg")}}" class="d-block w-100 rounded" alt="...">
					</div>
					<div class="carousel-item">
						<img src="{{asset("assets/img/mousse_au_chocolat.jpg")}}" class="d-block w-100 rounded" alt="...">
					</div>
					<div class="carousel-item">
						<img src="{{asset("assets/img/jardinniere-quinoa.jpg")}}" class="d-block w-100 rounded" alt="...">
					</div>
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>


		</div>
	</div>


{% endblock %}
