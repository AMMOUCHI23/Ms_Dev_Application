{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
<div class="container col-6">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="my-3">
            Vous etes connecté sous : {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3  text-primary mt-4">Connexion</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-2" autocomplete="email" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

 	<div class="col mt-4 ">
         <a href="{{path('inscription')}}">   <button class="btn  border-primary btn-lg  mt-3" type="button">Pas encore inscrit ? créer un compte
    </button></a> 

		</div>
    	<div class="col mt-4 d-flex justify-content-end">
            <button class="btn btn-lg btn-success mt-3" type="submit">
        Connexion
    </button>

		</div>

</form>

    
</div>
{% endblock %}
